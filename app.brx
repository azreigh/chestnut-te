#!/usr/bin/brux
donut("src/assets.nut")
donut("src/globals.nut")
donut("src/input.nut")
donut("src/render.nut")

setScalingFilter(2)
setResolution(800, 600)
setFPS(60)
setWindowTitle("Chestnut TE")

screenRectSize = [screenW(), screenH()]
apScreen = newTexture(screenRectSize[0], screenRectSize[1])

while (true) {
	if (getQuit()) {
		break
	}
	::apMain()
	::handleInput()
	update()
}
